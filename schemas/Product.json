{
    "$schema": "json-schema.org/draft-04/schema",
    "title": "Product",
    "schemaType": "Product",
    "type": "object",
    "properties": {
        "id" : {
            "description": "Unique identifier",
            "type": "string"
        },
        "name": {
            "description": "Name of the product",
            "type": "string"
        },
        "vendor": {
            "description": "UUID of a Vendor document",
            "type": "string"
        },
        "productUrl": {
            "$ref": "./WebAddress.json"
        },
        "description": {
            "type": "string"
        },
        "comments": {
            "type": "string"
        },
        "isThirdPartyProduct": {
            "type": "boolean"
        },
        "hasArchiveCapitalFee": {
            "type": "boolean"
        },
        "cycleType": {
            "$ref": "./CycleType.json"
        },
        "fundings": {
            "type": "array",
            "items": {
                "$ref": "./funding.json"
            }
        },
        "isActive": {
            "type": "boolean"
        },
        "license": {
            "description": "UUID of a License",
            "anyOf": [
                { "type": "string" },
                { "type": "null" }
            ]
        },
        "terms": {
            "description": "Terms of the license that this Product overrides",
            "$ref": "./LicenseTerms.json"
        },
        "priceCap": {
            "type": "number"
        },
        "detailCode": {
            "$ref": "./ProductDetailCodes.json"
        },
        "librariesThatHavePaidAcf": {
            "type": "array",
            "items": {
                "$ref": "./Library.json"
            }
        },
        "oneTimePurchase": {
            "$ref": "./OneTimePurchase.json"
        }
    },
    "required": [ "name", "vendor" ]
}
