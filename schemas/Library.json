{
    "$schema": "json-schema.org/draft-04/schema",
    "title": "Library",
    "schemaType": "Library",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique identifier for the Library record",
            "type": "string"
        },
        "name": {
            "description": "Name of Library",
            "type": "string"
        },
        "fte": {
            "description": "Full-time Enrollment of Library",
            "type": "integer"
        },
        "institutionYears": {
            "description": "2 or 4 years",
            "$ref": "./InstitutionYears.json"
        },
        "institutionType": {
            "description": "public or private",
            "$ref": "./InstitutionType.json"
        },
        "ipAddresses": {
            "description": "List of IP Addresses",
            "type": "array",
            "items": { "type": "string"}
        },
        "membershipLevel": {
            "description": "Governing, Affiliate, or Non-Member",
            "$ref": "./MembershipLevel.json"
        },
        "isIshareMember": {
            "type": "boolean"
        },
        "gar": {
            "description": "General Account Receivable",
            "type": "string"
        },
        "isActive": {
            "description": "Is this library active?",
            "type": "boolean"
        },
        "outstandingBalances": {
            "description": "List of outstanding balances",
            "type": "array",
            "items":  { "$ref": "./OutstandingBalances.json" }
        },
        "products": {
            "description": "Products offered by this library",
            "type": "array",
            "items": { "$ref": "./Product.json" }
        },
        "contacts": {
            "description": "List of library contacts",
            "type": "array",
            "items": { "$ref": "./Contact.json" }
        }
    },
    "required": [ "name" ]
}