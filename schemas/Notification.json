{
  "$schema": "json-schema.org/draft-04/schema",
  "title": "Notification",
  "schemaType": "Notification",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for the Notification record",
      "type": "string"
    },
    "targetEntity": {
      "description": "The uuid of the recipient of this notification, either a library or vendor.",
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "emailBody": {
      "type": "string"
    },
    "pdfBody": {
      "type": "string"
    },
    "offerings": {
      "description": "An array of offering uuids.  This data will be aggregated into the PDF Invoice or Report",
      "type": "array",
      "items": { "type": "string" }
    },
    "draftStatus": {
        "type": "string",
        "enum": ["draft", "sent"]
    },
    "dateSent": {
        "type": "string"
    },
    "summaryTotal": {
        "type": "integer"
    },
    "notificationType": {
        "$ref": "./NotificationType.json"
    }
  },
  "required": [ "targetEntity", "subject", "emailBody", "draftStatus", "notificationType" ]
}
