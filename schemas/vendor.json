{
    "title": "Vendor",
    "type": "object",
    "properties": {
        "Name": {
            "description": "Name of Vendor",
            "type": "string"
        },
        "Website URL": {
            "description": "Vendor's Website",
            "type": "string",
            "pattern": "(\b(https?)://)?[-A-Za-z0-9+&@#/%?=~_|!:,.;]+[-A-Za-z0-9+&@#/%=~_|]"
        },
        "Contacts": {
            "description": "List of vendor contacts",
            "type": "array",
            "items": { "$ref": "schemas/contact.json" }
        },
        "Comments": {
            "description": "Vendor comments",
            "type": "string"
        },
        "Admin Module": {
            "description": "Free field text to keep track of CARLI troubleshooting with vendor",
            "type": "string"
        },
        "isActive": {
            "description": "Is this vendor active?",
            "type": "boolean"
        },
        "Products": {
            "description": "Products offered by this vendor",
            "type": "array",
            "items": { "$ref": "schemas/product.json" }
        },
        "License Agreements": {
            "description": "License agreements used by this vendor",
            "type": "array",
            "items": { "$ref": "schemas/license-agreement.json" }
        },
        "required": [ "Name" ]
    }
}
