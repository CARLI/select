{
    "$schema": "json-schema.org/draft-04/schema",
    "title": "OutstandingBalance",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique identifier for the Outstanding Balance record",
            "type": "string"
        },
        "name": {
            "description": "Name of Library",
            "type": "string"
        },
        "amount": {
            "description": "Amount of balance owed",
            "type": "integer"
        },
        "cycleType": {
            "description": "Fiscal Year, Calendar Year, etc.",
            "$ref": "./CycleType.json"
        },
        "year": {
            "description": "Year balance is owed",
            "type": "string"
        },
        "comment": {
            "description": "Comment for outstanding balance",
            "type": "string"
        }
    }
}