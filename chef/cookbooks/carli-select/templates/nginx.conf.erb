        }
    }

    server {
        listen       <%= node['carli']['nginx']['port'] %>;
        server_name  <%= node['carli']['nginx']['library_app']['hostname'] %>;

        location / {
            root <%= node['carli']['nginx']['library_app']['webroot'] %>;
